    <TypeScriptCompile Include="ClientApp\src\app\models\openposition\openposition.model.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\models\openposition\shippinginfo.model.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\models\feeds\european-fixes-view-model.model.ts" />
