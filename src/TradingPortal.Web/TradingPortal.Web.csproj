  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="ClientApp\src\app\components\spotprice\spotprice.component.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\components\spotprice\spotprice.component1.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\directives\maxvaluevalidator.directive.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\directives\uppercase.directive.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\models\admin\customer.model.ts" />
    <TypeScriptCompile Include="ClientApp\src\app\models\appinit.model.ts" />
