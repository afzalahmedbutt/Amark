    <None Remove="ClientApp\src\app\models\topic\topic-view.model.ts" />
    <None Remove="ClientApp\src\app\models\WebSpotPrice\update-spots-view-model.ts" />
    <None Remove="ClientApp\src\app\models\WebSpotPrice\web-spot-prices.model.ts" />
    <None Remove="ClientApp\src\app\pipes\decimalcurrency.pipe.ts" />
    <None Remove="ClientApp\src\app\pipes\listfilter.pipe.ts" />
